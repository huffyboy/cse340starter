<% if (title) { %>
    <h1><%= title %></h1>
<% } else { %>
    <script>
        window.location.href = "/";
    </script>
<% } %>

<% errors = (typeof errors !== 'undefined' && errors !== null) ? errors : [] %>
<% if (errors.length > 0) { %>
    <ul class="notice">
        <% errors.forEach(error => { %>
            <li><%= error.msg %></li>
        <% }) %>
    </ul>
<% } %>

<div class="management">
    <%- messages() %>
    <form id="deleteForm" action="/inv/delete" method="post">
        <div>
            <label for="inv_make">Make:</label>
            <input type="text" id="inv_make" name="inv_make" value="<%= locals.inv_make %>" readonly>
        </div>
        <div>
            <label for="inv_model">Model:</label>
            <input type="text" id="inv_model" name="inv_model" value="<%= locals.inv_model %>" readonly>
        </div>
        <div>
            <label for="inv_year">Year:</label>
            <input type="number" id="inv_year" name="inv_year" min="1000" max="9999" placeholder="YYYY" value="<%= locals.inv_year %>" readonly>
        </div>
        <div>
            <label for="inv_price">Price:</label>
            <input type="number" id="inv_price" name="inv_price" max="999999999" value="<%= locals.inv_price %>" readonly>
        </div>
        <div>
            <p>Confirm Deletion - The delete is permanent.</p>
            <button type="submit">Delete Vehicle</button>

            <input
                type="hidden" name="inv_id"
                <% if(locals.inv_id) { %> value="<%= locals.inv_id %>"
            <% } %>>

        </div>
    </form>
</div>